#include <iostream>
#include <cmath>
using namespace std;
float ReadCircumference()
{
	float L;
	cout << "enter circle circumference:\n";
	cin >> L;
	return L;
}
float CircleArea(float L)
{
	float Area=pow(L, 2) / (4 * 3.14);
	return Area;
}
void PrintResult(float Area)
{
	cout << "area of circle= " << Area;
}
int main()
{
	PrintResult(CircleArea(ReadCircumference()));
	return 0;
}











