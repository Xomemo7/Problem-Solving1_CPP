#include <iostream>
#include<string>
using namespace std;
string ReadName()
{
    string Name;
    cout << "enter your name:\n";
    getline(cin, Name);
    return Name;
}
void PrintEnteredName(string Name)
{
    cout << "your name is " << Name<<endl;
}
int main()
{
    PrintEnteredName(ReadName());

    return 0;
}